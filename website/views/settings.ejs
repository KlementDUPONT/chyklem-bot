<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Panel - <%= guild.name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        /* DESIGN MEE6-LIKE */
        :root { 
            --bg-body: #18191c; 
            --bg-sidebar: #202225; 
            --bg-card: #2f3136; 
            --text-main: #ffffff; 
            --text-muted: #b9bbbe; 
            --accent: #5865F2; 
            --success: #3ba55d;
            --hover: #40444b;
        }

        body { background: var(--bg-body); color: var(--text-main); font-family: 'Segoe UI', sans-serif; height: 100vh; overflow: hidden; }
        .wrapper { display: flex; height: 100%; }
        
        /* SIDEBAR */
        .sidebar { width: 280px; background: var(--bg-sidebar); padding: 20px; display: flex; flex-direction: column; border-right: 1px solid #202225; overflow-y: auto; }
        .server-header { display: flex; align-items: center; margin-bottom: 30px; padding-bottom: 20px; border-bottom: 1px solid #2f3136; }
        .server-icon { width: 48px; height: 48px; border-radius: 50%; margin-right: 15px; object-fit: cover; border: 2px solid var(--accent); }
        .nav-category { font-size: 0.75rem; text-transform: uppercase; color: #8e9297; margin: 20px 0 10px 10px; font-weight: bold; }
        .nav-btn { display: flex; align-items: center; padding: 10px 15px; color: var(--text-muted); text-decoration: none; border-radius: 5px; margin-bottom: 5px; transition: 0.2s; cursor: pointer; font-weight: 500; }
        .nav-btn:hover, .nav-btn.active { background: var(--hover); color: white; }
        .nav-btn.active { background: var(--accent); }

        /* CONTENT */
        .content { flex: 1; padding: 40px 60px; overflow-y: auto; position: relative; background: var(--bg-body); }
        h2 { font-weight: 700; margin-bottom: 30px; border-bottom: 2px solid #2f3136; padding-bottom: 15px; }

        /* MODULE GRID */
        .modules-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 20px; margin-bottom: 40px; }
        .module-card { 
            background: var(--bg-card); border-radius: 12px; padding: 20px; 
            transition: transform 0.2s, box-shadow 0.2s; cursor: pointer; 
            border: 1px solid transparent; height: 180px; display: flex; flex-direction: column; justify-content: space-between; position: relative;
        }
        .module-card:hover { transform: translateY(-5px); border-color: var(--accent); box-shadow: 0 5px 15px rgba(0,0,0,0.3); }
        .card-icon { width: 50px; height: 50px; border-radius: 10px; display: flex; align-items: center; justify-content: center; font-size: 24px; color: white; margin-bottom: 15px; }
        .module-checkbox { position: absolute; top: 20px; right: 20px; transform: scale(1.5); cursor: pointer; accent-color: var(--success); z-index: 10; }

        /* CONFIG BOXES */
        .module-section { display: none; animation: fadeIn 0.3s; }
        .module-section.active { display: block; }
        .config-box { background: var(--bg-card); padding: 30px; border-radius: 12px; margin-bottom: 25px; border: 1px solid #202225; }
        .form-control, .form-select { background: #202225; border: 1px solid #40444b; color: white; padding: 12px; border-radius: 8px; }
        .form-control:focus, .form-select:focus { background: #202225; color: white; border-color: var(--accent); box-shadow: none; }
        .form-label { font-weight: 600; color: #b9bbbe; margin-bottom: 10px; }

        /* SAVE BAR */
        .save-bar { position: absolute; bottom: -100px; left: 50%; transform: translateX(-50%); background: #111; padding: 15px 40px; border-radius: 50px; display: flex; align-items: center; gap: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.5); transition: 0.4s; z-index: 999; border: 1px solid #333; }
        .save-bar.show { bottom: 40px; }
        
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
        
        /* TABLES */
        .table-dark { background-color: transparent; --bs-table-bg: transparent; }
        .table-dark th, .table-dark td { border-color: #40444b; color: #dcddde; vertical-align: middle; }
    </style>
</head>
<body>

<div class="wrapper">
    <div class="sidebar">
        <div class="server-header">
            <% if (guild.icon) { %>
                <img class="server-icon" src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png">
            <% } else { %>
                <div class="server-icon bg-primary d-flex align-items-center justify-content-center text-white fw-bold"><%= guild.name.charAt(0) %></div>
            <% } %>
            <div class="fw-bold text-truncate"><%= guild.name %></div>
        </div>

        <div class="nav-btn active" onclick="showTab('overview', this)"><i class="fas fa-th-large me-2"></i> Tableau de bord</div>
        
        <div class="nav-category">Modules</div>
        <div class="nav-btn" onclick="showTab('reactionroles', this)"><i class="fas fa-check-circle me-2"></i> RÃ´les-RÃ©actions</div>
        <div class="nav-btn" onclick="showTab('welcome', this)"><i class="fas fa-door-open me-2"></i> Bienvenue</div>
        <div class="nav-btn" onclick="showTab('timers', this)"><i class="fas fa-clock me-2"></i> Timers</div>
        <div class="nav-btn" onclick="showTab('levels', this)"><i class="fas fa-trophy me-2"></i> Niveaux</div>
        <div class="nav-btn" onclick="showTab('tempvoice', this)"><i class="fas fa-microphone-alt me-2"></i> Vocaux Temp</div>
        <div class="nav-btn" onclick="showTab('customcmds', this)"><i class="fas fa-terminal me-2"></i> Commandes</div>
        
        <div class="nav-category">Gestion</div>
        <div class="nav-btn" onclick="showTab('moderation', this)"><i class="fas fa-gavel me-2"></i> ModÃ©ration</div>
        <div class="nav-btn" onclick="showTab('economy', this)"><i class="fas fa-coins me-2"></i> Ã‰conomie</div>

        <a href="/dashboard" class="nav-btn mt-auto text-danger"><i class="fas fa-sign-out-alt me-2"></i> Quitter</a>
    </div>

    <div class="content">
        <% if (success) { %>
            <div class="alert alert-success position-fixed top-0 end-0 m-4" style="z-index: 1050; border-radius: 10px;" id="successAlert">
                <i class="fas fa-check-circle me-2"></i> Configuration sauvegardÃ©e !
            </div>
            <script>setTimeout(() => document.getElementById('successAlert').style.display = 'none', 3000);</script>
        <% } %>

        <form action="/settings/<%= guild.id %>" method="POST" id="settingsForm">

            <div id="overview" class="module-section active">
                <h2>Modules</h2>
                <div class="modules-grid">
                    
                    <div class="module-card" onclick="openTab('reactionroles')">
                        <input type="checkbox" name="module_reactionroles" class="module-checkbox" <%= settings.module_reactionroles ? 'checked' : '' %> onclick="event.stopPropagation()">
                        <div class="card-icon" style="background: #4CAF50;"><i class="fas fa-check-circle"></i></div>
                        <h4 class="text-white">RÃ´les-RÃ©actions</h4>
                        <p class="text-muted small">Donne des rÃ´les via des Ã©mojis.</p>
                    </div>

                    <div class="module-card" onclick="openTab('welcome')">
                        <input type="checkbox" name="module_welcome" class="module-checkbox" <%= settings.module_welcome ? 'checked' : '' %> onclick="event.stopPropagation()">
                        <div class="card-icon" style="background: #FF9800;"><i class="fas fa-door-open"></i></div>
                        <h4 class="text-white">Bienvenue</h4>
                        <p class="text-muted small">Message et image d'accueil.</p>
                    </div>

                    <div class="module-card" onclick="openTab('timers')">
                        <input type="checkbox" name="module_timers" class="module-checkbox" <%= settings.module_timers ? 'checked' : '' %> onclick="event.stopPropagation()">
                        <div class="card-icon" style="background: #009688;"><i class="fas fa-clock"></i></div>
                        <h4 class="text-white">Timers</h4>
                        <p class="text-muted small">Messages automatiques.</p>
                    </div>

                    <div class="module-card" onclick="openTab('tempvoice')">
                        <input type="checkbox" name="module_tempvoice" class="module-checkbox" <%= settings.module_tempvoice ? 'checked' : '' %> onclick="event.stopPropagation()">
                        <div class="card-icon" style="background: #673AB7;"><i class="fas fa-microphone-alt"></i></div>
                        <h4 class="text-white">Vocaux Temp</h4>
                        <p class="text-muted small">Join-to-Create.</p>
                    </div>

                    <div class="module-card" onclick="openTab('levels')">
                        <input type="checkbox" name="module_levels" class="module-checkbox" <%= settings.module_levels ? 'checked' : '' %> onclick="event.stopPropagation()">
                        <div class="card-icon" style="background: #2196F3;"><i class="fas fa-trophy"></i></div>
                        <h4 class="text-white">Niveaux</h4>
                        <p class="text-muted small">SystÃ¨me d'XP et classement.</p>
                    </div>

                    <div class="module-card" onclick="openTab('customcmds')">
                        <input type="checkbox" name="module_customcmds" class="module-checkbox" <%= settings.module_customcmds ? 'checked' : '' %> onclick="event.stopPropagation()">
                        <div class="card-icon" style="background: #9C27B0;"><i class="fas fa-terminal"></i></div>
                        <h4 class="text-white">Commandes</h4>
                        <p class="text-muted small">Commandes textuelles perso.</p>
                    </div>

                     <div class="module-card" onclick="openTab('economy')">
                        <input type="checkbox" name="module_economy" class="module-checkbox" <%= settings.module_economy ? 'checked' : '' %> onclick="event.stopPropagation()">
                        <div class="card-icon" style="background: #FFEB3B; color:#333"><i class="fas fa-coins"></i></div>
                        <h4 class="text-white">Ã‰conomie</h4>
                        <p class="text-muted small">Monnaie virtuelle.</p>
                    </div>

                    <div class="module-card" onclick="openTab('moderation')">
                        <input type="checkbox" name="module_moderation" class="module-checkbox" <%= settings.module_moderation ? 'checked' : '' %> onclick="event.stopPropagation()">
                        <div class="card-icon" style="background: #F44336;"><i class="fas fa-gavel"></i></div>
                        <h4 class="text-white">ModÃ©ration</h4>
                        <p class="text-muted small">Logs et sanctions.</p>
                    </div>

                </div>
            </div>

            <div id="reactionroles" class="module-section">
                <h2>RÃ´les-RÃ©actions</h2>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Astuce : Active le <strong>Mode DÃ©veloppeur</strong> sur Discord pour copier l'ID des messages (Clic droit sur un message > Copier l'identifiant).
                </div>

                <div class="config-box">
                    <h5>Nouveau RÃ´le-RÃ©action</h5>
                    <div class="row g-3 align-items-end">
                        <div class="col-md-3">
                            <label class="form-label">Salon</label>
                            <select name="channel_id" class="form-select" form="rrForm">
                                <% channels.forEach(c => { if(c.type===0){ %><option value="<%= c.id %>">#<%= c.name %></option><% }}) %>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">ID Message</label>
                            <input type="text" name="message_id" class="form-control" placeholder="12345..." required form="rrForm">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Emoji</label>
                            <input type="text" name="emoji" class="form-control" placeholder="âœ…" required form="rrForm">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">RÃ´le</label>
                            <select name="role_id" class="form-select" form="rrForm">
                                <% roles.forEach(r => { if(!r.managed && r.name !== '@everyone'){ %><option value="<%= r.id %>">@<%= r.name %></option><% }}) %>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-success w-100" type="submit" form="rrForm">Ajouter</button>
                        </div>
                    </div>
                </div>

                <div class="config-box">
                    <h5>RÃ´les Actifs</h5>
                    <table class="table table-dark mt-3">
                        <thead><tr><th>Salon</th><th>Message ID</th><th>Emoji</th><th>RÃ´le</th><th>Action</th></tr></thead>
                        <tbody>
                            <% if(locals.reactionRoles) { reactionRoles.forEach(rr => { %>
                                <tr>
                                    <td>#<%= (channels.get(rr.channel_id)||{}).name || rr.channel_id %></td>
                                    <td><%= rr.message_id %></td>
                                    <td><%= rr.emoji %></td>
                                    <td>
                                        <% const r = roles.get(rr.role_id); %>
                                        <span class="badge" style="background-color: <%= r ? '#' + r.color.toString(16) : '#99aab5' %>">
                                            <%= r ? r.name : 'RÃ´le inconnu' %>
                                        </span>
                                    </td>
                                    <td>
                                        <form action="/settings/<%= guild.id %>/rr/delete" method="POST">
                                            <input type="hidden" name="id" value="<%= rr.id %>">
                                            <button class="btn btn-sm btn-outline-danger">X</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <div id="timers" class="module-section">
                <h2>Timers</h2>
                <div class="config-box">
                    <h5>Ajouter un Timer</h5>
                    <div class="row g-2 align-items-end">
                        <div class="col-md-3"><label>Salon</label>
                            <select name="channel_id" class="form-select" form="timerForm">
                                <% channels.forEach(c => { if(c.type===0){ %><option value="<%= c.id %>">#<%= c.name %></option><% }}) %>
                            </select>
                        </div>
                        <div class="col-md-2"><label>Intervalle (min)</label><input type="number" name="interval" class="form-control" placeholder="60" form="timerForm"></div>
                        <div class="col-md-5"><label>Message</label><input type="text" name="message" class="form-control" placeholder="Texte..." form="timerForm"></div>
                        <div class="col-md-2"><button type="submit" class="btn btn-primary w-100" form="timerForm">Ajouter</button></div>
                    </div>
                </div>
                <div class="config-box">
                    <table class="table table-dark">
                        <% timers.forEach(t => { %>
                            <tr>
                                <td>#<%= (channels.get(t.channel_id)||{}).name %></td>
                                <td><%= t.interval_minutes %> min</td>
                                <td><%= t.message %></td>
                                <td><form action="/settings/<%= guild.id %>/timers/delete" method="POST"><input type="hidden" name="id" value="<%= t.id %>"><button class="btn btn-danger btn-sm">X</button></form></td>
                            </tr>
                        <% }) %>
                    </table>
                </div>
            </div>

            <div id="tempvoice" class="module-section">
                <h2>Vocaux Temporaires</h2>
                <div class="config-box">
                    <label class="form-label">Salon Vocal "CrÃ©ateur"</label>
                    <select name="tempvoice_channel_id" class="form-select mb-3">
                        <option value="">Aucun</option>
                        <% channels.forEach(c => { if(c.type===2){ %> <option value="<%= c.id %>" <%= settings.tempvoice_channel_id===c.id?'selected':'' %>>ðŸ”Š <%= c.name %></option> <% }}) %>
                    </select>
                    <label class="form-label">CatÃ©gorie des salons crÃ©Ã©s</label>
                    <select name="tempvoice_category_id" class="form-select">
                        <option value="">Aucune</option>
                        <% channels.forEach(c => { if(c.type===4){ %> <option value="<%= c.id %>" <%= settings.tempvoice_category_id===c.id?'selected':'' %>>ðŸ“‚ <%= c.name %></option> <% }}) %>
                    </select>
                </div>
            </div>

            <div id="welcome" class="module-section">
                <h2>Bienvenue</h2>
                <div class="config-box">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">Salon d'arrivÃ©e</label>
                            <select name="welcome_channel_id" class="form-select mb-3">
                                <option value="">ðŸš« DÃ©sactivÃ©</option>
                                <% channels.forEach(c => { if(c.type===0){ %> <option value="<%= c.id %>" <%= settings.welcome_channel_id===c.id?'selected':'' %>>#<%= c.name %></option> <% }}) %>
                            </select>
                            <label class="form-label">RÃ´le Auto</label>
                            <select name="autorole_id" class="form-select mb-3">
                                <option value="">ðŸš« Aucun</option>
                                <% roles.forEach(r => { if(r.name!=='@everyone' && !r.managed){ %> <option value="<%= r.id %>" <%= settings.autorole_id===r.id?'selected':'' %>>@<%= r.name %></option> <% }}) %>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <input type="text" name="welcome_bg" id="bgInput" class="form-control mb-2" placeholder="URL Image" value="<%= settings.welcome_bg %>">
                            <input type="color" name="welcome_color" id="colorInput" class="form-control form-control-color w-100" value="<%= settings.welcome_color %>">
                        </div>
                    </div>
                </div>
            </div>

            <div id="levels" class="module-section"><h2>Niveaux</h2><div class="config-box"><label>Message Level Up</label><input name="level_up_message" class="form-control" value="<%= settings.level_up_message %>"></div></div>
            <div id="customcmds" class="module-section"><h2>Commandes</h2><div class="config-box"><p>Configure tes commandes ici (Ajoute le formulaire si besoin).</p></div></div>
            <div id="moderation" class="module-section"><h2>ModÃ©ration</h2><div class="config-box"><label>Logs</label><select name="log_channel_id" class="form-select"><option value="">Non</option><% channels.forEach(c => { if(c.type===0){ %> <option value="<%= c.id %>" <%= settings.log_channel_id===c.id?'selected':'' %>>#<%= c.name %></option> <% }}) %></select></div></div>
            <div id="economy" class="module-section"><h2>Ã‰conomie</h2><div class="config-box"><p>ParamÃ¨tres Ã©conomie.</p></div></div>

            <div class="save-bar" id="saveBar">
                <span class="text-white fw-bold"><i class="fas fa-exclamation-circle text-warning me-2"></i> Modifications non enregistrÃ©es</span>
                <button type="button" class="btn btn-outline-light btn-sm ms-3" onclick="window.location.reload()">Annuler</button>
                <button type="submit" class="btn btn-success btn-sm fw-bold px-4 ms-2">Enregistrer</button>
            </div>

        </form>

        <form id="rrForm" action="/settings/<%= guild.id %>/rr/add" method="POST"></form>
        <form id="timerForm" action="/settings/<%= guild.id %>/timers/add" method="POST"></form>

    </div>
</div>

<script>
    function showTab(id, btn) {
        document.querySelectorAll('.module-section').forEach(el => el.classList.remove('active'));
        document.getElementById(id).classList.add('active');
        if(btn) {
            document.querySelectorAll('.nav-btn').forEach(el => el.classList.remove('active'));
            btn.classList.add('active');
        }
    }
    function openTab(id) { 
        showTab(id);
        // Highlight sidebar btn
        const sidebarBtn = document.querySelector(`.nav-btn[onclick="showTab('${id}', this)"]`);
        if(sidebarBtn) {
            document.querySelectorAll('.nav-btn').forEach(el => el.classList.remove('active'));
            sidebarBtn.classList.add('active');
        }
    }
    
    // Preview BG Update
    const bgInput = document.getElementById('bgInput');
    if(bgInput) {
        bgInput.addEventListener('input', () => { /* Logique preview ici */ });
    }

    // Save Bar
    document.getElementById('settingsForm').addEventListener('change', () => document.getElementById('saveBar').classList.add('show'));
</script>
</body>
</html>